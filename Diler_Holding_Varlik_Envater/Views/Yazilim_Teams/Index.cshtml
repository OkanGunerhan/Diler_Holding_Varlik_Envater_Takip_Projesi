<script>

    $('#tblOffice tfoot th').each(function () {
        var title = $(this).text();
        $(this).html('<input type="text" align="center" placeholder="Ara" />');
    });

    $('#tblOffice').DataTable({
        dom: 'Bfrtip',
        "scrollX": true,
        "scrollY": "200px",
        "scrollCollapse": true,
        "paging": true,

        initComplete: function () {
            // Apply the search
            this.api().columns().every(function () {
                var that = this;

                $('input', this.footer()).on('keyup change clear', function () {
                    if (that.search() !== this.value) {
                        that
                            .search(this.value)
                            .draw();
                    }
                });
            });
        },
        buttons: [{
            extend: 'excelHtml5',
            customize: function (xlsx) {
                var sheet = xlsx.xl.worksheets['sheet1.xml'];

                // jQuery selector to add a border
                $('row c[r*="10"]', sheet).attr('s', '25');
            }
        }]
    });
</script>


