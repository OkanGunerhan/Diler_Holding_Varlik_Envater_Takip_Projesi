<script>

    $('#tblComputer tfoot th').each(function () {
        var title = $(this).text();
        $(this).html('<input type="text" align="center" placeholder="Ara" />');
    });

    $('#tblComputer').DataTable({
        dom: 'Bfrtip',
        "scrollX": true,
        "scrollY": "200px",
        "scrollCollapse": true,
        "paging": true,

        initComplete: function () {
            // Apply the search
            this.api().columns().every(function () {
                var that = this;

                $('input', this.footer()).on('keyup change clear', function () {
                    if (that.search() !== this.value) {
                        that
                            .search(this.value)
                            .draw();
                    }
                });
            });
        },
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    });
</script>

