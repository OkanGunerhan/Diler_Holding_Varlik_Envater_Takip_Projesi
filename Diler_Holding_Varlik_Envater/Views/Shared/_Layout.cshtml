<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="dt-body-center">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Diler Envanter Kayıt Sistemi", "Create", "Home", new { area = "" }, new { @class = "navbar-brand" })
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Ana Rapor", "MainList", "Home")</li>
                    <li>@Html.ActionLink("Bilgisayar", "Index", "Computer")</li>
                    <li>@Html.ActionLink("Monitor", "Index", "Monitor")</li>
                    <li>@Html.ActionLink("Yazıcılar", "Index", "Yazici")</li>
                    <li>@Html.ActionLink("Wınn", "Index", "WINN")</li>
                    <li>@Html.ActionLink("Teams&Office", "Index", "Yazilim_Teams")</li>
                    <li>@Html.ActionLink("SAP-GUI", "Index", "SAP")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Diler Holding Envanter Takip</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
